<Window x:Class="CyberAwareChatbot.TutorialWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cybersecurity Tutorial" Height="400" Width="600"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ComboBox x:Name="LessonCombo" Margin="0,0,0,10">
            <ComboBoxItem>Password Security</ComboBoxItem>
            <ComboBoxItem>Phishing Awareness</ComboBoxItem>
        </ComboBox>
        <TextBlock x:Name="InstructionText" Grid.Row="1" TextWrapping="Wrap" Margin="0,0,0,10"/>
        <TextBox x:Name="InputText" Grid.Row="2" Margin="0,0,0,10"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Submit" Click="SubmitButton_Click" Margin="0,0,5,0"/>
            <Button Content="Close" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>